<% include ../partials/header %>
<div class="container">
    <div class="row">
       <h1 style="text-align: center">Edit Appetizer</h1> 
       <div style="width: 30%; margin: 25px auto;">
            <form action="/restaurants/<%=restaurant_id%>/drinks/<%=drink._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="drink[food]" value="<%= drink.food %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="drink[price]" value="<%= drink.price %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-success">Submit</button>  
                </div>
            </form>
            <a href="/restaurants">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>
<% include ../partials/header %>
<div class="container">
    <div class="row">
       <h1 style="text-align: center">Edit Appetizer</h1> 
       <div style="width: 30%; margin: 25px auto;">
            <form action="/restaurants/<%=restaurant_id%>/appetizers/<%=appetizer._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="appetizer[food]" value="<%= appetizer.food %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="appetizer[price]" value="<%= appetizer.price %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-success">Submit</button>  
                </div>
            </form>
            <a href="/restaurants">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>
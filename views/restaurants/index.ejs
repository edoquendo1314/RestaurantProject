<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to PlebsFeast</h1>
            <p>
                <a class="btn btn-primary btn-large" href="/restaurants/new">Add New Restaurant</a>
            </p>
        </div>
    </header>
    <form action="/newaddress" method="GET">
        <input type="text" placeholder="x,y" name="address">
        <input type="search">
        <input type="submit">
    </form>
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
            <div class="caption">
                <table class="table table-hover">
                        <thead>
                            <tr>
                            <th scope="col">Restaurant Name</th>
                            <th scope="col">Hours</th>
                            <th scope="col">Menu Link</th>
                            </tr>
                        </thead>
                        <% restaurants.forEach(function(restaurant){ %>
                        <tbody>
                            <tr>
                            <td><h4><%= restaurant.name %></h4></td>
                            <td><%= restaurant.open %></td>
                            <td><a href= "/restaurants/<%=restaurant._id%>" class="btn btn-primary">Menu</a></td>
                            </tr>
                        </tbody>
                        <% }); %>
                </table>
            </div>
    </div>
</div>
<% include ../partials/footer %>
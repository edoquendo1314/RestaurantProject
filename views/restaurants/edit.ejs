<% include ../partials/header %>
<div class="container">
    <div class="row">
       <h1 style="text-align: center">Edit <%= restaurant.name %></h1> 
       <div style="width: 30%; margin: 25px auto;">
            <form action="/restaurants/<%=restaurant._id%>?_method=PUT" method="PUT">
                <div class="form-group">
                    <input class="form-control" type="text" name="restaurant[name]" value="<%= restaurant.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="restaurant[address]" value="<%= restaurant.address %>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="restaurant[open]"><%= restaurant.open %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-success">Submit</button>  
                </div>
            </form>
            <a href="/restaurants">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>